                                                    <div class="text-muted" style="margin-top: 10px;">☆ 4.8</div>
                                                   
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td></td>
                                    <td class="d-flex flex-column">
                                    </td>
                                    <td class="font-weight-bold">
                                        $5
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
            <hr class="items">
        </div>
    </div>

    <%- include("../partials/footer.ejs") -%>
