                                                    <div class="text-muted">Harisa/Mozarella Salades</div>
                                                    <div class="text-muted" style="margin-top: 10px;">☆ 4.4</div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td></td>
                                    <td class="d-flex flex-column">
                                    </td>
                                    <td class="font-weight-bold">
                                        $5
                                    </td>
                                </tr>
                                
                            </tbody>
                        </table>
                    </button>
                </form>
            </div>
            <hr class="items">
                <div class="table-responsive">
                    <form action="/resto" method="post">
                        <input type="hidden" name="prod_name" value="Pizza">
                        <button type="submit" id="prod_name" style="border: 0; background-color: #f4f4f4;">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col" class="text-uppercase header">item</th>
                                    <th scope="col" class="text-uppercase"></th>
                                    <th scope="col" class="text-uppercase"></th>
                                    <th scope="col" class="text-uppercase">Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="item">
                                        <div class="d-flex align-items-start">
                                            <img src="src/Food/Pizza.jpg" style="width: 50%; height: 50%; margin-right: 10%;">
